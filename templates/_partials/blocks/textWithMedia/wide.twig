<section class="w-full">
    <div class="flex flex-col md:flex-row">
        <div class="w-full md:w-1/2 {% if block.position == 'left' %}md:order-last{% endif %}">
            {% set size = block.imageRatio.value %}
            {% set sizes = '(min-width: 1440px) 1400px, (min-width: 1024px) and (max-width: 1439px) 50vw, 100vw' %}

            {% include "_partials/interface/images.twig" with {
                image: block.images,
                size: size,
                sizes: sizes,
                imageClasses:'w-full object-cover',
                containerClasses: ''
            } only %}
        </div>
        <div class="flex items-center justify-center w-full px-6 md:w-1/2 py-14 lg:px-20">
            <div class="w-full max-w-2xl">
                {% include "_partials/blocks/textWithMedia/_partials/content.twig" %}
            </div>
        </div>
    </div>
</section>
